func (server {{.prefix}}Server) _{{.prefix}}_{{.path.OperationID}}_Handler(c *gin.Context) {
    in, _ := Make{{.path.OperationID}}Req(c)
    server.Srv.{{.path.OperationID}}(in, c)
}
